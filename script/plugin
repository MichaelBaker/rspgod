#!/bin/bash

set -e

rm -f *.o
rm -f *.so
rm -f *.dylib
rm -f *.a

make
make install

psql -c $'create table if not exists test (n책me text, age int, other float)'
psql -c $'select * from pg_create_logical_replication_slot(\'slot\', \'thingy\')' || true
psql -c $'insert into test (n책me, age, other) values (\'my_name\', 89, 0)'
psql -c $'update test set age = 50 where n책me = \'my_name\''
psql -c $'delete from test where n책me = \'my_name\''
psql -c $'SELECT * FROM pg_logical_slot_peek_changes(\'slot\', NULL, NULL)'
psql -c $'select pg_drop_replication_slot(\'slot\')'
psql -c $'drop table test'
